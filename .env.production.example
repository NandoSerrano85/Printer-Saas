# =============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env.production and fill in the actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="Printer SaaS Backend"
APP_VERSION="1.0.0"
ENVIRONMENT="production"
DEBUG=false
LOG_LEVEL="warning"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_PASSWORD="CHANGE_THIS_SECURE_PASSWORD"
DATABASE_PORT=5432

# =============================================================================
# SECURITY KEYS (CHANGE THESE!)
# =============================================================================
JWT_SECRET_KEY="CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_AT_LEAST_32_CHARACTERS"
SESSION_SECRET_KEY="CHANGE_THIS_TO_ANOTHER_SECURE_RANDOM_STRING_AT_LEAST_32_CHARACTERS"

# =============================================================================
# CORS SETTINGS
# =============================================================================
ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# =============================================================================
# SHOPIFY INTEGRATION
# =============================================================================
SHOPIFY_CLIENT_ID="your-real-shopify-client-id"
SHOPIFY_CLIENT_SECRET="your-real-shopify-client-secret"
SHOPIFY_OAUTH_REDIRECT_URI="https://yourdomain.com/api/v1/shopify/oauth/callback"
SHOPIFY_WEBHOOK_SECRET="your-shopify-webhook-secret"

# =============================================================================
# ETSY INTEGRATION
# =============================================================================
ETSY_CLIENT_ID="your-real-etsy-client-id"
ETSY_CLIENT_SECRET="your-real-etsy-client-secret"
ETSY_OAUTH_REDIRECT_URI="https://yourdomain.com/api/v1/etsy/oauth/callback"
ETSY_WEBHOOK_SECRET="your-etsy-webhook-secret"

# =============================================================================
# EXTERNAL API URLs
# =============================================================================
NEXT_PUBLIC_API_URL="https://api.yourdomain.com"

# =============================================================================
# FILE STORAGE
# =============================================================================
STORAGE_BACKEND="local"
# For S3: set to "s3" and configure AWS settings below
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_REGION="us-east-1"
# AWS_S3_BUCKET="your-s3-bucket"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_ETSY_INTEGRATION=true
FEATURE_SHOPIFY_INTEGRATION=true
FEATURE_BATCH_OPERATIONS=true
FEATURE_WEBHOOK_PROCESSING=true

# =============================================================================
# MONITORING (OPTIONAL)
# =============================================================================
SENTRY_DSN=""
PROMETHEUS_METRICS_ENABLED=true

# =============================================================================
# MONITORING CREDENTIALS (if using --monitoring flag)
# =============================================================================
GRAFANA_USER="admin"
GRAFANA_PASSWORD="CHANGE_THIS_SECURE_PASSWORD"

# =============================================================================
# MISCELLANEOUS
# =============================================================================
AUTO_MIGRATE=true
REDIS_PORT=6379
BACKEND_PORT=8000
FRONTEND_PORT=3000
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001